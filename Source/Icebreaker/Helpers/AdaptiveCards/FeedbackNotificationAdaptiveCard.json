{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "%matchUpCardTitleContent%",
          "wrap": true,
          "maxLines": 2
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "%matchUpCardMatchedText%",
              "wrap": true
            }
          ]
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "%matchUpCardContentPart1%",
              "wrap": true
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "%matchUpCardContentPart2%",
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "%FeedbackForm%",
      "url": "https://forms.microsoft.com/Pages/ResponsePage.aspx?id=Mq3lZATL30SIlr7V13kkKX2oFIRviPhApxuWl9FnKTFURTBETTg5TjlKQVFBNjQ2NE82Nlg1VlBZRC4u"
    },
    {
      "type": "Action.OpenUrl",
      "title": "%proposeMeetupButtonText%",
      "url": "%meetingLink%"
    },
    {
      "type": "Action.Submit",
      "title": "%pauseMatchesButtonText%",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "%pauseMatchesButtonText%",
          "text": "optout"
        }
      }
    }
  ],
  "version": "1.0"
}